{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES2019"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "paths": {
      "csstype": ["node_modules/csstype"]
    }
  }
}
